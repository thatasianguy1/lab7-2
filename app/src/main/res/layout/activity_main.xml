<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="221dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_marginTop="36dp"
        android:text="@string/string_startservice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv"></Button>

    <Button
        android:id="@+id/stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:layout_marginTop="16dp"
        android:text="@string/string_stopservice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start"></Button>

    <Button
        android:id="@+id/bind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop"
        android:layout_marginTop="17dp"
        android:text="@string/string_bind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stop"></Button>

    <Button
        android:id="@+id/unbind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bind"
        android:text="@string/string_unbind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bind"></Button>

    <Button
        android:id="@+id/random"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unbind"
        android:layout_marginTop="10dp"
        android:text="GET RANDOM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unbind"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>